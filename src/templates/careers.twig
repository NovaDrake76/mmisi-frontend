{% extends 'page.twig' %}

{% set sectionJobs %}
  <div class="redactor">
    <p>
      If you think all insurance is the same, think again. There are a number of
      areas that you can specialize in that match your interests and have a huge
      opportunity for growth and revenue. At Murray & MacDonald, you'll have a
      number of opportunities to advance your career. This includes ownership,
      paid time off, and more.
    </p>
  </div>
  {% include '_blocks/_accordions.twig' with {
    blk: {
      accordions: [
        { heading: 'Excellent Benefits', contents: '<p>Your Markup</p>' },
        { heading: 'Positive Work Culture', contents: '<p>Your Markup</p>' },
        { heading: 'Professional Development', contents: '<p>Your Markup</p>' }
      ]
    }
  } %}
{% endset %}

{% set entry = {
  title: 'Is a career in the insurance industry right for you?',
  coverPicture: 'https://unsplash.it/800/450?image=856',
  videoUrl: 'https://www.youtube.com/watch?v=DsC8jQXRbQE',
  pageIntro: '
    <div class="redactor">
      <p>
        If you like being independent, the answer is "yes." As an independent insurance agent, you have freedom of schedule, no caps on income, lots of opportunity, and the ability to control your destiny.
      </p>
    </div>
  ',
  contentBlocks: [
    {
      type: 'sectionFeature',
      heading: 'Not just a job, a career.',
      coverPicture: 'https://picsum.photos/640/448?random=1',
      contents: sectionJobs
    }
  ]
} %}

{% block pageHeader %}
  {% include '_blocks/_sectionFeature.twig' with {
    blk: {
      heading: entry.title,
      coverPicture: entry.coverPicture is defined ? entry.coverPicture : null,
      videoUrl: entry.videoUrl is defined ? entry.videoUrl : null,
      contents: entry.pageIntro is defined ? entry.pageIntro : null,
      htag: 'h1',
      flip: true
    }
  } %}
{% endblock %}

{% block subcontent %}
  {% include '_assembled/_footer_cta.twig' %}
{% endblock %}
