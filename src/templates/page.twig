{% extends '_layouts/_generic_page_layout.twig' %}

{% block content %}
  <div class="px-3 py-8 lg:pt-20">
    <article class="mx-auto max-w-narrow">
      {% if entry is defined and entry and entry.title %}
        {% if
          (entry.pageIntro is defined and entry.pageIntro)
            or (entry.coverPicture is defined and entry.coverPicture) %}
          {% include '_blocks/_sectionFeature.twig' with {
            blk: {
              heading: entry.title,
              coverPicture: entry.coverPicture is defined
                ? entry.coverPicture
                : null,
              contents: entry.pageIntro is defined ? entry.pageIntro : null,
              htag: 'h1'
            }
          } %}
        {% else %}
          {% include '_partials/_page_header.twig' with {
            heading: entry.title
          } %}
        {% endif %}
      {% endif %}

      {% block beforeContentBlocks %}

      {% endblock %}

      {% if
        entry is defined
          and entry
          and entry.contentBlocks is defined
          and entry.contentBlocks %}
        <div class="my-16 lg:my-20">
          {% include '_partials/_content_blocks.twig' with {
            blocks: entry.contentBlocks
          } %}
        </div>
      {% endif %}

      {% block afterContentBlocks %}

      {% endblock %}
    </article>
  </div>
{% endblock %}
