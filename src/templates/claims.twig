{% extends 'page.twig' %}

{% set richContents %}
  <p>
    <strong>Need help reporting a claim?</strong>
    Contact us during business hours to speak with an advisor directly.
  </p>
{% endset %}

{% set entry = {
  title: 'Report a Claim',
  contentBlocks: [
    {
      type: 'cta',
      contents: richContents,
      btnLink: { url: '#', text: 'Pay with ePay' }
    }
  ]
} %}

{% set claims = [] %}
{% for carrier in carriers %}
  {% set claims = claims|merge([carrier|merge({ url: carrier.claimsLink })]) %}
{% endfor %}

{% block afterContentBlocks %}
  {% include '_partials/_carrier_grid.twig' with { carriers: claims } %}
{% endblock %}
