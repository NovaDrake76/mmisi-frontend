{% if blk is defined 
      and blk and 
      blk.heading is defined
      and blk.heading
      and blk.postDate is defined
      and blk.postDate
      and blk.tags is defined
      and blk.tags %}
  <div class="flex flex-col gap-x-8 md:flex-row">
    {% if blk.coverPicture is defined and blk.coverPicture %}
      <div class="relative flex-shrink-0 w-full md:w-[350px]">
        <picture class="relative">
          <img data-src="{{ blk.coverPicture }}"
            alt=""
            class="object-cover w-full rounded"
            loading="lazy" />
        </picture>
      </div>
    {% endif %}

    <div class="flex flex-col flex-1 gap-8">
      <div>
        {% include '_partials/_heading.twig' with {
          text: blk.heading,
          htag: 'h1'
        } %}
      </div>
      
      <div class="flex flex-row gap-8 flex-wrap">
        <div class='flex flex-row items-center gap-2'>
          <span class='icon-post-date'></span>
          <a href='#' class='uppercase'>{{ blk.posDate|date("F j\\, Y") }}</a href='#'>
        </div>

        <div class='flex flex-row flex-wrap items-center gap-2'>
          <span class='icon-post-categories'></span>
          {% for tag in blk.tags %}
            <a href='#' class='uppercase'>{{ tag }}{{tag == blk.tags|last ? '' : ', '}}</a>
          {% endfor %}
        </div>
      </div>

    </div>
  </div>
{% endif %}
